            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R" />

        <RadioButton
            android:id="@+id/radioButton"
